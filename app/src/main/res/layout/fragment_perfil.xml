<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ItensParticulares">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <!--ImageView-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"/>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="30dp">
            <!--primeiro nome-->
            <TextView
                android:id="@+id/f_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/armata"
                android:textSize="20sp"/>
            <!--segundo nome-->
            <TextView
                android:id="@+id/s_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/armata"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="20sp"/>
        </LinearLayout>
        <!-- pontuação -->
        <TextView
            android:id="@+id/pontuacaoUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pontuação"
            android:fontFamily="@font/armata"
            android:textSize="35sp"
            android:layout_gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>
        <!-- data do registro-->
        <TextView
            android:id="@+id/entrada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/armata"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Entrou em : "
            android:textSize="20sp" />
        <!-- ultima vez online-->
        <TextView
            android:id="@+id/ultimaEntrada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Online a "
            android:fontFamily="@font/armata"
            android:textSize="20sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="60dp"
            android:src="@drawable/baseline_edit_black_18"
            android:tint="@color/preto"
            app:backgroundTint="@color/variant_2" />
    </LinearLayout>
</FrameLayout>